
<div class="card-list-containar py-5">
    
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">

        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_path(post.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= post.body %></p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  
</div>

<%= link_to "投稿作成", new_post_path, class: "btn btn-success mb-2" %>