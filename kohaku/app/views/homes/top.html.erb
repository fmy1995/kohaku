<div class="container">
 <div class="row">
  <div class="col-5">  
  
  <div>
   <h1 class="subject">最近の投稿 <%= link_to "全ての投稿",posts_path, class: 'btn btn-info' %></h1>
   <table class="table table-hover">
  　  <tbody>
      <% @posts.each do |post| %>　   
   　   <tr>
        <td>
          <%= link_to(post_path(post.id), class:"text-dark ml-2") do %>
           <%= post.title %>
          <% end %>
        </td>
        <td width="100" height="50">
          <%= link_to(post_path(post.id)) do %>
           <%= attachment_image_tag post, :image, size: '10%', class:"card-img-top"; %>
          <% end %>         
        </td>
       </tr>
      <% end %>    
     </tbody>
    </table>
   </div>
   </div>
  
   <div class="col-5 offset-1">   
  
　　<h1 class="subject">最近のジャンル</h1>
   <table class="table table-hover">
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left"><%= link_to(genre_path(genre.id)) do %><%= genre.name%><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
 </div>
  
  
   </div>  
 </div>    
</div>
